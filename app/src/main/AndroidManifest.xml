<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dinuscxj.recycleritemdecoration" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.dinuscxj.recycleritemdecoration.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity android:name="com.dinuscxj.recycleritemdecoration.PinnedHeaderActivity"
            android:label="@string/label_pinned_header"/>

        <activity android:name=".DividerActivity"
            android:label="@string/label_divider"/>

        <activity android:name=".OffsetsActivity"
            android:label="@string/label_offsets"/>

        <activity android:name="com.dinuscxj.recycleritemdecoration.ShaderActivity"
            android:label="@string/label_shader"/>

    </application>

</manifest>
